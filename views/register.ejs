<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/signup.css">
</head>

<body>
    <div class="container-fluid">
        <div class="main">
            <div class="form-container mx-auto">
				<%- include("partials/messages") %>
                <form action="/users/register" class="form signup-form" id="signup-form" method="POST" autocomplete="OFF">
                    <h2>Create Account</h2>

                    <div class="form-group">
                        <input class="input-field" type="text" name="name" id="name" placeholder="Full Name" value="<%= typeof name != 'undefined' ? name : '' %>">
                    </div>

                    <div class="form-group">
                        <input class="input-field" type="email" name="email" id="email" placeholder=" Email Address" value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div>

                    <div class="form-group" style="position: relative;">
                        <input class="input-field" type="password" name="password" id="password" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>">
                        <span class="fa fa-eye show-pass"></span>
                    </div>

                    <div class="form-group">
                        <input class="input-field" type="password" name="password2" id="password2" placeholder="Confirm password"  value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                    </div>

                    <div class="form-group mt-5">
                        <input type="submit" name="signup-btn" value="SIGN UP" id="signup-btn" class="input-field">
                    </div>


                </form>
                <p class="text-center mt-5 signup-footer">Already have an account?
                    <a href="/users/login">Login here</a>
                </p>

                <!-- form-container ends -->
            </div>
            <!-- main div ends -->
        </div>



        <!-- container-fluid div ends -->
    </div>


    <script>
        $(document).ready(function() {
            $('.show-pass').click(function() {
                $(this).toggleClass('fa-eye fa-eye-slash');
                var passField = $('#password');
                if (passField.attr('type') == 'password')
                    passField.attr('type', 'text');
                else
                    passField.attr('type', 'password');
            });
        });
    </script>
</body>

</html>